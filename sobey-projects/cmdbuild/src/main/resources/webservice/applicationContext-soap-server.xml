<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd"
	default-lazy-init="true">

	<description>Apache CXF的 SOAP Web Service配置</description>

	<!-- jax-ws endpoint定义 -->
	<jaxws:endpoint address="/soap/cmdbuildSoapService">
		<jaxws:implementor ref="cmdbuildSoapService" />
	</jaxws:endpoint>

	<jaxws:endpoint address="/soap/infrastructureSoapService">
		<jaxws:implementor ref="infrastructureSoapService" />
	</jaxws:endpoint>

	<jaxws:endpoint address="/soap/financialSoapService">
		<jaxws:implementor ref="financialSoapService" />
	</jaxws:endpoint>

	<jaxws:endpoint address="/soap/iaasSoapService">
		<jaxws:implementor ref="iaasSoapService" />
	</jaxws:endpoint>

	<!-- WebService的实现Bean定义 -->

	<bean id="cmdbuildSoapService" class="com.sobey.cmdbuild.webservice.CmdbuildSoapServiceImpl" />

	<bean id="infrastructureSoapService"
		class="com.sobey.cmdbuild.webservice.InfrastructureSoapServiceImpl" />

	<bean id="financialSoapService" class="com.sobey.cmdbuild.webservice.FinancialSoapServiceImpl" />

	<bean id="iaasSoapService" class="com.sobey.cmdbuild.webservice.IaasSoapServiceImpl" />
	
	
	  <jaxws:client id="switchesSoapService"
		serviceClass="com.sobey.generate.switches.SwitchesSoapService"
		address="http://localhost:8082/switch/cxf/soap/switchesSoapService?wsdl" />  

</beans>